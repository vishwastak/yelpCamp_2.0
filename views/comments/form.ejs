<%- include("../partials/header") -%>
<div class ="container">
        <h1 style ="text-align: center; width:30%; margin:30px auto; ">Add a new comment to <%=campground.name%></h1>
        <div style ="width:30%; margin:0 auto; ">
            <form action="/campgrounds/<%=campground.id%>/comments" method="post">
                <div class="form-group">
                    <input class ="form-control" type="text" name ="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class ="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
            
        

</div>

<%- include("../partials/footer") -%>
